{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src", "./eslint.config.js"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
